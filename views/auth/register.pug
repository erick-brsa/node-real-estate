extends ../layout/index

block content
    div(class="py-10")
        h2(class="text-center text-4xl font-extrabold my-10") Bienes
            span(class="font-normal") Raices
        h2(class="text-center text-2xl font-extrabold")= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded")= error.msg

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                input(type="hidden" name="_csrf" value= csrfToken)
                form(class="space-y-5" method="POST" action='/auth/register')
                    div
                        label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="name") Tu nombre
                        input(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" id="name" placeholder="Tu nombre" type="text" name="name" value= user ? user.name : '')
                    div
                        label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="email") Email
                        input(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" id="email" placeholder="Tu correo" type="email" name="email" value= user ? user.email : '')
                    div
                        label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="password") Contraseña
                        input(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" id="password" placeholder="Tu password" type="password" name="password")
                    div
                        label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="repeat_password") Confirma tu contraseña
                        input(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" id="repeat_password" placeholder="Confirma tu contraseña" type="password" name="repeat_password")
                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-sm") ¿Ya tienes una cuenta?
                        a(href="/auth/reset-password" class="text-gray-500 text-sm") ¿Olvitaste tu contraseña?
                    input(class="w-full bg-indigo-700 hover:bg-indigo-700 text-white font-bold py-2 cursor-pointer rounded" type="submit" value="Crear cuenta")