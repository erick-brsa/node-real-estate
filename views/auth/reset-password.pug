extends ../layout/index

block content
    div(class="py-10")
        h2(class="text-center text-4xl font-extrabold my-10") Bienes
            span(class="font-normal") Raices
        h2(class="text-center text-2xl font-extrabold")= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded")= error.msg

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST" action="/auth/reset-password")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="email") Email
                        input(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" id="email" placeholder="Tu correo" type="email" name="email")
                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-sm") ¿Ya tienes una cuenta?
                        a(href="/auth/register" class="text-gray-500 text-sm") ¿No tienes una cuenta? Regístrate
                    input(class="w-full bg-indigo-700 hover:bg-indigo-700 text-white font-bold py-2 cursor-pointer rounded" type="submit" value="Enviar correo de recuperación")
